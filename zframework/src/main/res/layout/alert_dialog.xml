<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <LinearLayout
        android:id="@+id/rl_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bg_white"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:singleLine="true"
            android:text="温馨提示"
            android:textColor="@color/orange_new"
            android:textSize="15sp" /><View
            android:id="@+id/title_border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/orange_new" />

        <TextView
            android:id="@+id/msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="left|top"
            android:lineSpacingMultiplier="1.2"
            android:minHeight="70dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:maxLines="12"
            android:clickable="false"
            android:longClickable="false"
            android:scrollbars="vertical"
            android:text="确认继续吗？"
            android:textColor="@color/text_color"
            android:textSize="15sp" />
        <View
            android:id="@+id/btn_border"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/border" />

        <LinearLayout
            android:id="@+id/btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancel_btn"
                style="@style/round_bottom_btn_left_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:singleLine="true"
                android:text="否"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <View
                android:id="@+id/btn_separator_border_1"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/border" />

            <Button
                android:id="@+id/neutral_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_selector"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:singleLine="true"
                android:text="忽略"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <View
                android:id="@+id/btn_separator_border_2"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/border" />

            <Button
                android:id="@+id/ok_btn"
                style="@style/round_bottom_btn_right_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:singleLine="true"
                android:text="是"
                android:textColor="@color/text_color"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>